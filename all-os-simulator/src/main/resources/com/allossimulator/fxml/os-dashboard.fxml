<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.allossimulator.controller.OSDashboardController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <children>
        <!-- System Overview -->
        <HBox spacing="10" VBox.vgrow="NEVER">
            <children>
                <VBox fx:id="systemInfoBox" styleClass="system-info" spacing="5" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="System Information" styleClass="section-header"/>
                        <GridPane hgap="10" vgap="5">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label text="OS Type:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                <Label text="Windows 11" fx:id="osTypeLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                                <Label text="Kernel Version:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                <Label text="10.0.22000" fx:id="kernelVersionLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <Label text="Uptime:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                <Label text="0 days 2:34:56" fx:id="uptimeLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                <Label text="Load Average:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                                <Label text="0.45, 0.38, 0.40" fx:id="loadAvgLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                            </children>
                        </GridPane>
                    </children>
                </VBox>
                
                <VBox fx:id="systemResourcesBox" styleClass="system-resources" spacing="5" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="System Resources" styleClass="section-header"/>
                        <GridPane hgap="10" vgap="5">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label text="CPU:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                <ProgressBar fx:id="cpuProgress" progress="0.35" minWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                                <Label text="Memory:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                <ProgressBar fx:id="memoryProgress" progress="0.65" minWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <Label text="Disk:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                <ProgressBar fx:id="diskProgress" progress="0.42" minWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                <Label text="Network:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                                <ProgressBar fx:id="networkProgress" progress="0.15" minWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                            </children>
                        </GridPane>
                    </children>
                </VBox>
            </children>
        </HBox>
        
        <!-- Charts Section -->
        <SplitPane orientation="VERTICAL" VBox.vgrow="ALWAYS">
            <items>
                <!-- CPU and Memory Charts -->
                <VBox spacing="10">
                    <children>
                        <Label text="Resource Usage" styleClass="section-header"/>
                        <HBox spacing="10">
                            <children>
                                <VBox HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="CPU Usage"/>
                                        <LineChart fx:id="cpuChart" animated="false" createSymbols="false" horizontalGridLinesVisible="false" horizontalZeroLineVisible="false" verticalGridLinesVisible="false" verticalZeroLineVisible="false">
                                            <xAxis>
                                                <CategoryAxis side="BOTTOM" fx:id="cpuXAxis"/>
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis side="LEFT" fx:id="cpuYAxis" upperBound="100.0"/>
                                            </yAxis>
                                        </LineChart>
                                    </children>
                                </VBox>
                                <VBox HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Memory Usage"/>
                                        <LineChart fx:id="memoryChart" animated="false" createSymbols="false" horizontalGridLinesVisible="false" horizontalZeroLineVisible="false" verticalGridLinesVisible="false" verticalZeroLineVisible="false">
                                            <xAxis>
                                                <CategoryAxis side="BOTTOM" fx:id="memoryXAxis"/>
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis side="LEFT" fx:id="memoryYAxis"/>
                                            </yAxis>
                                        </LineChart>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                
                <!-- Network and Disk Charts -->
                <VBox spacing="10">
                    <children>
                        <Label text="Network &amp; Disk Activity" styleClass="section-header"/>
                        <HBox spacing="10">
                            <children>
                                <VBox HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Network Usage"/>
                                        <LineChart fx:id="networkChart" animated="false" createSymbols="false" horizontalGridLinesVisible="false" horizontalZeroLineVisible="false" verticalGridLinesVisible="false" verticalZeroLineVisible="false">
                                            <xAxis>
                                                <CategoryAxis side="BOTTOM" fx:id="networkXAxis"/>
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis side="LEFT" fx:id="networkYAxis"/>
                                            </yAxis>
                                        </LineChart>
                                    </children>
                                </VBox>
                                <VBox HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Disk Activity"/>
                                        <LineChart fx:id="diskChart" animated="false" createSymbols="false" horizontalGridLinesVisible="false" horizontalZeroLineVisible="false" verticalGridLinesVisible="false" verticalZeroLineVisible="false">
                                            <xAxis>
                                                <CategoryAxis side="BOTTOM" fx:id="diskXAxis"/>
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis side="LEFT" fx:id="diskYAxis"/>
                                            </yAxis>
                                        </LineChart>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </items>
        </SplitPane>
        
        <!-- Process Summary -->
        <VBox spacing="5" VBox.vgrow="NEVER">
            <children>
                <Label text="Active Processes" styleClass="section-header"/>
                <TableView fx:id="processTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="PID" prefWidth="80.0" fx:id="pidColumn"/>
                        <TableColumn text="Name" prefWidth="200.0" fx:id="nameColumn"/>
                        <TableColumn text="CPU %" prefWidth="80.0" fx:id="cpuColumn"/>
                        <TableColumn text="Memory" prefWidth="100.0" fx:id="memoryColumn"/>
                        <TableColumn text="Status" prefWidth="100.0" fx:id="statusColumn"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</VBox>